<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:background="#5E5D5F ">

    <TextView
        android:id="@+id/servestarter"
        android:background="#fffff0"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="30dp"
        android:text="Enter name of the Serve Starter in Player1"

        android:layout_marginStart="30dp" />

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
    android:id="@+id/linearL"
    >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/player1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="sans-serif-medium"
                android:hint="Player1Name"
                android:padding="4dp"
                android:textColor="#F8F358"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/s1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                android:fontFamily="sans-serif-light"
                android:padding="4dp"
                android:text="0"
                android:textColor="#000000"
                android:textSize="80sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="8dp"
                android:onClick="onclick1"
                android:text="+ 1"
                android:textStyle="bold"
                tools:ignore="OnClick" />

            <TextView
                android:id="@+id/Serve1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="^"
                android:textColor="#F8F358 "
                android:textSize="100dp" />
        </LinearLayout>

         <View
        android:id="@+id/view"
        android:layout_width="1dp"
        android:layout_height="350dp"
        android:background="@android:color/background_dark" />

        <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <EditText
            android:id="@+id/player2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="4dp"
            android:textSize="30sp"
            android:textColor="#F8F358"
            android:fontFamily="sans-serif-medium"
            android:hint="Player2Name"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            />

        <TextView
            android:id="@+id/s2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="4dp"
            android:layout_marginBottom="24dp"
            android:textSize="80sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif-light"
            android:text="0" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="8dp"
            android:onClick="onclick2"
            android:text="+ 1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Serve2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textColor="#F8F358 "
            android:textSize="100dp"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>

</LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Reset"
        android:onClick="reset"

        />
    <TextView
        android:id="@+id/Winner"
        android:textSize="30sp"
        android:hint="Winner"
               android:gravity="center"
        android:textColor="#F8F358"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/linearL"
        android:layout_marginTop="500dp"
        />

</RelativeLayout>
